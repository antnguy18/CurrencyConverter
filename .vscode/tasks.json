{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run JavaFX Application",
            "type": "shell",
            "command": "mvn",
            "args": [
                "javafx:run", 
                "-f", 
                "${workspaceFolder}/currency-converter/pom.xml"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "mvn",
            "args": ["clean", "install"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}